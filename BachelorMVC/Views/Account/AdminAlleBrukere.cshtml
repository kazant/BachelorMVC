@model IEnumerable<BachelorMVC.Models.Testbruker>

@{
    Layout = "_signedInLayout";
}

@{
    ViewData["Title"] = "Liste over brukere";
}
<h2>Velkommen @User.Claims.Where(c => c.Type == "name").FirstOrDefault().Value</h2>


<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<p>Use this area to provide additional information.</p>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            BrukerID
        </th>
        <th>
            E-mail
        </th>
        <th>
            Firma
        </th>
        <th>
            Godkjent
        </th>
        <th>
            Slett
        </th>
        <th>
            Sendte Signeringer
        </th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.user_id
            </td>
            <td>
                @item.email
            </td>
            <td>
                @item.user_metadata.firma
            </td>
            
                @if(@item.user_metadata.nickname == "0") {
                    <td>
                        @Html.ActionLink("Ikke godkjent", "setGodkjent", "Account", new { id = item.user_id }, null) 
                    </td>
                } else {
                    <td>
                        Godkjent
                    </td>
                }
            <td>
                <button>@Html.ActionLink("Slett", "deleteUser", "Account", new { id = item.user_id }, null)</button>
            </td>
            <td>
                @item.user_metadata.antallSigneringer
            </td>
        </tr>
    }

</table>
